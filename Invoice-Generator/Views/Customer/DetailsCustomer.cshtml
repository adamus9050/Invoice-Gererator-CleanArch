@using Application.Dto;
@model Application.Dto.CustomerDto;
@{
    ViewData["Title"] = "DetailsCustomer";
}

<h3>Szczegoły klienta</h3>


 <table class="table">

           <thead>
                <tr>
                  <th scope="col">Street</th>
                  <th scope="col">NumberOfStreet</th>
                  <th scope="col">PostalCode</th>
                  <th scope="col">City</th>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <th scope="row">@Model.Street</th>
                  <td>@Model.NumberOf</td>
                  <td>@Model.PostCode</td>
                  <td>@Model.City</td>

                    @using (Html.BeginForm("Edit", "Customer", FormMethod.Post))
                    {
                       <input type="hidden" name="Id" value="@Model.Id" />
                       <button class="btn btn-danger" type="submit">Edytuj</button>
                    }

                  </tr> 

              </tbody>    
  
 </table> 
<a href=@Url.ActionLink("CustomerList", "Customer")>Wróć</a>


