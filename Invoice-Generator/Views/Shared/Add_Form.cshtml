@model Domain.Entities.Customer
@{
    ViewData["Title"] = "Add";
}
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;900&display=swap" rel="stylesheet">
<h3>Dodanie klienta</h3>
@using (Html.BeginForm("Search", "Customer", FormMethod.Post))
{
                    <input type="text" name="SearchString" />
                        <input class="btn btn-outline-primary" type="submit" value="Filter" /> 

                    <h6>wpisz właściwość klienta</h6> 
}
<div class="row g-3">
    @using (Html.BeginForm("Add", "Customer", FormMethod.Post))
    {
        @Html.ValidationSummary()

                      <div class="col">
                                <input type="text" class="form-control" placeholder="Imię klienta" @Html.TextBoxFor(x =>x.Name)>
                      </div>
                      <div class="col">
                                    <input type="text" class="form-control" placeholder="Nazwisko" @Html.TextBoxFor(x => x.Surname)>
                      </div>
                      <div class="col">
                                    <input type="text" class="form-control" placeholder="Nazwisko" @Html.TextBoxFor(x => x.PhoneNumber)>
                      </div>
                      <div class="col">
                                     <input type="text" class="form-control" placeholder="Nazwisko" @Html.TextBoxFor(x => x.Address.Street)>
                      </div>
                    
                      <div class="col">
                                     <input type="text" class="form-control" placeholder="Nazwisko" @Html.TextBoxFor(x => x.Address.NumberOf)>
                      </div>
                      <div class="col">
                                     <input type="text" class="form-control" placeholder="Nazwisko" @Html.TextBoxFor(x => x.Address.City)>
                      </div>
                      <div class="col">
                                      <input type="text" class="form-control" placeholder="Nazwisko" @Html.TextBoxFor(x => x.Address.PostCode)>
                      </div>
                    <br/>
                    <button class="btn btn-primary" type="submit"> Wyślij formularz</button> 

    }
    <br/>
    <p>Zapisane id klienta:</p><strong>@TempData["CustomerId"]</strong> 
</div>

